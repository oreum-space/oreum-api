{
  "name": "oreum-api",
  "version": "1.0.0",
  "description": "API for Oreum Space applications",
  "main": "./src/index.ts",
  "scripts": {
    "node": "node",
    "build": "npx tsc ",
    "start": "node dist",
    "preview": "ts-node src/index.ts",
    "dev": "nodemon"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oreum-space/oreum-api.git"
  },
  "author": "didh9i",
  "license": "MIT",
  "dependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^20.11.15",
    "@types/nodemailer": "^6.4.14",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "mongoose": "^8.1.0",
    "nodemailer": "^6.9.8",
    "nodemon": "^3.0.3",
    "path-parser": "^6.1.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3",
    "uuid": "^9.0.1",
    "ws": "^8.16.0"
  },
  "nodemonConfig": {
    "verbose": true,
    "watch": [
      "src",
      ".env",
      "yarn.lock",
      "tsconfig.json",
      "package.json"
    ],
    "ext": "ts",
    "ignore": [
      "*.test.ts"
    ],
    "delay": 500,
    "execMap": {
      "ts": "ts-node src/index.ts --skip-alias"
    }
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
